[Unit]
Description=Daily AI Hub Document Ingestion
Documentation=https://github.com/chetbliss/ai-hub

[Timer]
# Run daily at 4 AM
OnCalendar=*-*-* 04:00:00
# Run on boot if missed
Persistent=true
# Random delay up to 15 minutes to avoid thundering herd
RandomizedDelaySec=900

[Install]
WantedBy=timers.target
